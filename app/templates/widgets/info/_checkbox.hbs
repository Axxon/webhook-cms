<div class="wy-control-group">
  <label for="Options">Checkbox options <i class="fa fa-question-circle"></i></label>
  <div class="wy-control">
    <label for="check-x" class="wy-checkbox">
      <input id="check-x" name="check-example" type="checkbox" value="">
      <input type="text" value="Option 1">
      <span class="fa fa-plus-circle" data-toggle="tooltip" title="Add a new checkbox option below this one."></span>
      <span class="fa fa-times-circle" data-toggle="tooltip" title="Remove this checkbox option.">
    </label>
    <label for="check-y" class="wy-checkbox">
      <input id="check-y" name="check-example" type="checkbox" value="">
      <input type="text" value="Option 2">
      <span class="fa fa-plus-circle" data-toggle="tooltip" title="Add a new checkbox option below this one."></span>
      <span class="fa fa-times-circle" data-toggle="tooltip" title="Remove this checkbox option.">
    </label>
  </div>
</div>
