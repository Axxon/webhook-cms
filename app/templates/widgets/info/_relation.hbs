<div class="wy-control-group">
  <div class="wy-form-full">
    <label for="Options">Relationships to allow</label>
    <div class="wy-control">
      {{view Ember.Select
        content=contentTypes
        optionValuePath="content.id"
        optionLabelPath="content.name"
        value=editingControl.meta.data.contentTypeId
        prompt="All content types"
      }}
    </div>
    <div class="wy-control">
      <label class="wy-checkbox">
        {{input type="checkbox" checked=editingControl.meta.data.isSingle}}
        only allow one searched item and no more.
      </label>
    </div>
  </div>
</div>
