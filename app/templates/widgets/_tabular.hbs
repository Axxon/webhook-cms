<table class="wy-table wy-table-bordered-all wy-table-striped wh-table-tabular">
  <thead>
    <tr>
      {{#each option in view.content.meta.options}}
        <th>{{option.value}}</th>
      {{/each}}
      {{#unless view.content.disabled}}<th></th>{{/unless}}
    </tr>
  </thead>
  <tbody>
    {{#each row in value}}
      <tr>
        {{#each data in row}}
          <td>{{input value=data.value disabled=view.content.disabled}}</td>
        {{/each}}
        {{#unless view.content.disabled}}<td><button type="button" class="btn btn-link icon icon-remove-sign" {{action "removeTabularRow" row view.content}}></button>{{/unless}}
      </tr>
    {{/each}}
  </tbody>
</table>

{{#unless view.content.disabled}}<button type="button" class="btn btn-link btn-small icon icon-plus-sign" {{action "addTabularRow" view.content}}> {{t 'form.control.tabular.add'}}</button>{{/unless}}
