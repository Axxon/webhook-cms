{{#if control.meta.isSingle}}
  {{#view 'relation-value' context=value}}
    {{#link-to 'wh.content.type.edit' view.contentType.id view.relatedItem.id}}{{view.relatedItem.itemData.name}}{{/link-to}}
  {{/view}}
{{else}}
  {{#view 'relation-values' relationKeys=value}}
    {{each view.slicedKeys itemView='relation-value'}}
    {{#if view.more}}
      and {{view.more}} more
    {{/if}}
  {{/view}}
{{/if}}
