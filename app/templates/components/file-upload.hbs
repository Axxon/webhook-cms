<div class="wy-control-group-file">

  {{#if control.value}}
    <a {{ bind-attr href=value }} target="_blank" class="wy-file-location icon icon-paper-clip"> {{ control.value }}</a>
    <span class="wy-file-remove icon icon-remove-sign" {{action "clear"}}></span>
  {{/if}}

  <div {{ bind-attr class=":wy-form-upload-container showUploadButton:on" }}>
    <div class="wy-form-upload">
      <div class="wy-form-upload-content">
        <button type="button" class="btn btn-neutral icon icon-paper-clip"> Drag or select file</button>
        <div class="image-loading btn btn-info">
          <div class="wy-spinner"></div>
          <span></span>
        </div>
      </div>
    </div>

    <button type="button" class="btn btn-small btn-link upload-method-toggle" {{action "toggleMethod"}}>or use a URL?</button>
  </div>

  <div {{ bind-attr class=":wy-form-upload-url :wy-input-prefix showUrlInput:on" }}>
    <span class="wy-input-context">Paste URL <span class="icon icon-arrow-right"></span></span><input type="text">
    <button type="button" class="btn btn-neutral btn-small upload-url">Upload</button>
    <button type="button" class="btn btn-small btn-link upload-method-toggle wy-text-danger icon icon-remove-sign" {{action "toggleMethod"}}> Cancel</button>
  </div>

</div>
