<table class="wy-table wy-table-bordered-all wy-table-striped wh-table-tabular">
  <thead>
    <tr>
      {{#each option in control.meta.options}}
      <th>{{option.value}}</th>
      {{/each}}
      {{#unless control.disabled}}<th></th>{{/unless}}
    </tr>
  </thead>
  <tbody>
    {{#each row in control.value}}
    <tr>
      {{#each data in row}}
      <td>{{input value=data.value disabled=control.disabled}}</td>
      {{/each}}
      {{#unless control.disabled}}<td><button type="button" class="btn btn-link icon icon-remove-sign" {{action "removeTabularRow" row control}}></button>{{/unless}}
    </tr>
    {{/each}}
  </tbody>
</table>

{{#unless control.disabled}}<button type="button" class="btn btn-link btn-small icon icon-plus-sign" {{action "addTabularRow" control}}> {{t 'form.control.tabular.add'}}</button>{{/unless}}
