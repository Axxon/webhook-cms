<div class="wh-markdown-editor-edits">
  <div class="wh-markdown-editor-toolbar">
    <span class="syntax-help">This field allows <a href="http://guides.github.com/overviews/mastering-markdown/" target="_blank">Markdown syntax</a>.</span>
    <span class="icon icon-fullscreen fullscreen-toggle"></span>
    <span class="icon icon-image upload-image" {{action "toggleImageModal" target="view"}}></span>
  </div>

  {{textarea placeholder=placeholder class="wh-form-markdown" value=value}}
</div>

<article class="wh-markdown-preview"></article>

{{webhook-modal
  show=showImageModal
  modalTemplate="widgets/common/imagemodal"
  session=session
  confirm="handleUpload"
  fakeControl=fakeImageControl
}}
