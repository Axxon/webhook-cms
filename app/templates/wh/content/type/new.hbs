<form class="wy-form-stacked" {{action createItem on="submit"}}>
  <fieldset>
    <legend>New {{name}}</legend>

    {{#each fields}}
      <div class="wy-control-group">
        <label>{{label}}</label>
        <div class="wy-control">
          {{input placeholder=placeholder value=value}}
          <span class="wy-form-message">{{help}}</span>
        </div>
      </div>
    {{/each}}
    <button type="submit" class="btn">Save</button>
    {{#if saved}}{{saved}}{{/if}}
  </fieldset>
</form>
