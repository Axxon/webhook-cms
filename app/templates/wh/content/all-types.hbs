<section class="wh-content-head">
  {{#link-to 'wh.content.start' class="btn icon icon-plus-sign btn-preview btn-small btn-success"}} Add new content type{{/link-to}}
  <h1>Your existing content types</h1>
</section>

<section class="wh-content-list">

  <table class="wy-table wy-table-bordered-rows wh-content">
    <thead>
      <tr>
        <th><a {{action "toggleSort" "name"}}>Content type</a></th>
        <th>ID</th>
        <th><a {{action "toggleSort" "oneOff"}}>Form style</a></th>
        <!-- <th>Items</th> -->
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        {{#link-to 'form' id tagName='tr'}}
          <td>{{name}}</td>
          <td>{{id}}</td>
          <td>{{#if oneOff}}Single Item{{else}}Multiple Items{{/if}}</td>
          <!-- <td>22</td> -->
          <td class="wy-table-actions">
            <button class="btn btn-link icon icon-remove-sign" {{action "deleteType" this bubbles=false}}></button>
          </td>
        {{/link-to}}
      {{/each}}
    </tbody>
  </table>

</section>
