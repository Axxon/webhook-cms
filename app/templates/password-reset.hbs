<div class="wh-login">
  <div class="wh-logo"></div>
  {{#unless error}}
    {{#unless success}}
      <div class="wy-alert wy-alert-info">{{t 'passwordReset.provideEmail'}}</div>
    {{/unless}}
  {{/unless}}
  {{#if error}}
    <div class="wy-alert wy-alert-warning">
      <div class="wy-alert-title">{{error.code}}</div>
      {{error.message}}
    </div>
  {{/if}}
  {{#if success}}
    <div class="wy-alert wy-alert-warning">{{t 'passwordReset.success'}}</div>
  {{/if}}
  <form class="wy-form-stacked" {{action resetPassword on="submit"}}>
    <div class="wy-control-group fluid-input">
      <label>{{t 'passwordReset.emailLabel'}}</label>
      <div class="wy-control">
        {{input type="email" value=email disabled=isSending}}
      </div>
    </div>
    <div class="wy-btn-group">
      <button class="btn icon icon-refresh" {{bind-attr disabled=isSending}}> {{t 'passwordReset.action'}}</button>
      {{#link-to 'login' classNames='btn btn-small btn-link'}}{{t 'passwordReset.goBack'}}{{/link-to}}
    </div>
  </form>
</div>
